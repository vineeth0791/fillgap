<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d3"
     >
    
     <RelativeLayout
         android:id="@+id/titlebar"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_alignParentTop="true"
       android:background="@drawable/d3"
         android:dividerHeight="2dp" >

         <RelativeLayout
             android:id="@+id/relativeLayout1"
             android:layout_width="200.0dp"
             android:layout_height="60.0dp"
             android:layout_marginLeft="3dp"
             android:layout_marginTop="5dp"
             android:background="@drawable/panel" >

             <ImageView
                 android:id="@+id/imageView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="16dp"
                 android:src="@drawable/searching" />

             <EditText
                 android:id="@+id/myFilter"
                 android:layout_width="150dp"
                 android:layout_height="50dp"
                 android:layout_marginTop="10dp"
                 android:layout_toRightOf="@+id/imageView1"
                 android:background="@drawable/panel"
                 android:ems="10"
                 android:hint="@string/some_hint"
                 android:textColor="#000000" >

                 <requestFocus />
             </EditText>
         </RelativeLayout>

         <ImageView
             android:id="@+id/btnadd"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_toRightOf="@+id/relativeLayout1"
             android:contentDescription="@string/desc"
             android:src="@drawable/tadd" />

         <ImageView
             android:id="@+id/importfb"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="19dp"
             android:layout_toRightOf="@+id/btnadd"
             android:src="@drawable/fb"
              />

     </RelativeLayout>

     <RelativeLayout
         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
             >
  
             <ImageView
                    android:id="@+id/dividerbar"
                     android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/titlebar"
                   android:background="@drawable/template2" />
  
        
           
        </RelativeLayout>
    
     <LinearLayout  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="55dp"
       android:orientation="vertical">

        
    <ListView
        android:id="@+id/androidlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_below="@+id/dividerbar"
        
       
        android:dividerHeight="1px"
         />
    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_below="@+id/dividerbar"
        android:background="@drawable/profilebg3"
        android:divider="#89CFF0"
        android:dividerHeight="2px"
         />
    
  	</LinearLayout>
 
</RelativeLayout>