<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCFC4"
     >
    
<TableRow      >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="200.0dp"
        android:layout_height="60.0dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
         >

<LinearLayout
    android:layout_width="230.0dp"
    android:layout_height="60.0dp"
    android:background="@drawable/panel" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/searching" />

        <EditText
            android:id="@+id/search"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView1"
            android:background="@drawable/panel"
            android:ems="10"
            android:hint="@string/some_hint"
            android:textColor="#000000" >

            <requestFocus />
        </EditText>
</LinearLayout>
        <ImageView
            android:id="@+id/add_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/tadd" />

    </RelativeLayout>
                        
                         </TableRow>
                         
  <TableRow android:background="#CFCFC4" android:layout_marginTop="4dip"  >
                            
                          <GridView
	       
	         android:id="@+id/grid_view"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:adjustViewBounds="true"
	         android:background="#CFCFC4"
	         android:columnWidth="50dip"
	         android:horizontalSpacing="10dp"
	         android:numColumns="3"
	         android:verticalSpacing="0dp" >
	     </GridView>
                           
                         </TableRow>
  
    
</TableLayout>