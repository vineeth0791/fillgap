<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:measureWithLargestChild="true"
    android:orientation="vertical" >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/less_than"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/lessthan" />
    
     <ImageView
        android:id="@+id/greaterthan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/less_than"
        android:src="@drawable/greaterthan" />

     <TextView
         android:id="@+id/display_date"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         
         android:layout_centerVertical="true"
         android:gravity="center"
         android:text="date" />

    </RelativeLayout>
    <ListView android:id="@+id/show_call_reports" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1" />
    <ListView android:id="@+id/show_calls" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1" />
</LinearLayout>